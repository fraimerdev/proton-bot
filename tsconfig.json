{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "typeRoots": ["src/types", "node_modules/@types"],
    "types": ["bun"],
    "sourceMap": true,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "#generated/prisma": ["./src/generated/prisma/client"]
    }
  },
  "include": ["src"]
}
