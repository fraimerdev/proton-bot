enum LogType {
  ChannelCreate
  ChannelDelete
  ChannelUpdate
  ChannelPinsUpdate
  GuildUpdate
  MemberJoin
  MemberLeave
  MemberUpdate
  MessageDelete
  MessageDeleteBulk
  MessageUpdate
  RoleCreate
  RoleDelete
  RoleUpdate
  WarnCreate
  WarnDelete
  WarnUpdate
  Unknown
}

model Log {
  id        String   @id @default(cuid())
  guildId   String
  type      LogType  @default(Unknown)
  enabled   Boolean
  channelId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  guild Guild @relation(fields: [guildId], references: [guildId], onDelete: Cascade)

  @@unique([guildId, type])
  @@map("logs")
}
